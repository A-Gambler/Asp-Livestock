@page
@model LiveStok.Pages.OpenInvitationsPage.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<h2>Active Users</h2>


<br />

<div class="panel panel-default">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Users[0].Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Users[0].IsAdministrator)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Users[0].EmailConfirmed)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Users[0].IsLocked)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Users[0].Id)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Users) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsAdministrator)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailConfirmed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsLocked)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    <a asp-page="../Users/Edit" asp-route-id="@item.Id">Edit</a>
            @*<a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
            <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>*@
                </td>
            </tr>
}
        </tbody>
    </table>
</div>

<br />
<br />

<h2>User Invitations</h2>


<br />

<div class="panel panel-default">
    <div class="panel-heading">
        <p>
            <a asp-page="Create">Create New</a>
        </p>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserOpenInvitation[0].Email)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.UserOpenInvitation) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
}
        </tbody>
    </table>
</div>

