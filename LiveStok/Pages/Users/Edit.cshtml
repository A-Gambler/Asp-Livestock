@page
@model LiveStok.Pages.Users.EditModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>User</h2>

<hr />
<div class="row">
    <div class="col-md-1">
        </div>
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>@Model.user.UserName</h4>
            </div>
            <div class="panel-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="user.Id" />
                        <div class="form-group">
                            <div class="checkbox">
                                <label>
                                    <input asp-for="user.IsAdministrator" /> @Html.DisplayNameFor(model => model.user.IsAdministrator)
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label>
                                    <input asp-for="user.IsLocked" /> @Html.DisplayNameFor(model => model.user.IsLocked)
                                </label>
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-success" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
        </div>

        <div>
            <a asp-page="./Index">Back to List</a>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
