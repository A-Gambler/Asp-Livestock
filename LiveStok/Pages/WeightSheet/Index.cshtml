@model LiveStok.Pages.WeightSheetPage.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Weight Sheets</h2>

@*<p>
    <a asp-page="Create">Create New</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WeightSheet[0].StockPurchase.BuyerNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeightSheet[0].LotNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeightSheet[0].StockPurchase.TypeOfAnimal.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeightSheet[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeightSheet[0].Origin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeightSheet[0].Skin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeightSheet[0].WeightOff)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.WeightSheet) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StockPurchase.BuyerNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LotNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StockPurchase.TypeOfAnimal.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Origin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Skin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WeightOff)
            </td>

            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
