                <table style='width:100%;overflow-x:scroll' class="text-center">
                    <thead>
                        <tr>
                            <th>
                                Count
                            </th>
                            <th>
                                Ave Wgt
                            </th>
                            <th>
                                Total Wgt
                            </th>
                            <th>
                                Ave Fat
                            </th>
                            <th>
                                Ave $/Kg
                            </th>
                            <th>
                                Ave $
                            </th>
                            <th>
                                Total $
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @Html.DisplayFor(model => model.TotalCount)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.AverageWeight)
                            </td>
