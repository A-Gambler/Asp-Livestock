    <div class="row">
        <div class="panel panel-default panel-success">
            <div class="panel-body">
                <table style='width:100%;overflow-x:scroll' class='table table-striped table-condensed table-hover'>
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.weightRanges[0].WeightClass)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.weightRanges[0].Range)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.weightRanges[0].Count)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.weightRanges[0].WeightPercentageOfTotal)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.weightRanges[0].Weight)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.weightRanges[0].Price)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.weightRanges[0].Value)
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.weightRanges)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.WeightClass)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Range)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Count)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.WeightPercentageOfTotal)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Weight)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Value)
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="panel panel-default panel-success">
            <div class="panel-body" style="padding-top:0px;padding-bottom:0px">
                <h4>
                    <table style='width:100%;overflow-x:scroll' class="text-right">
                        <thead>
                            <tr>
                                <th class="text-right">
                                    Total Skin $
                                </th>
                                <th class="text-right">
                                    Total $
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    @Html.DisplayFor(model => model.SkinValue)
                                </td>
                                <td>
                                    <h3>
                                        @Html.DisplayFor(model => model.TotalValue_SkinPlusValue)
                                    </h3>
                                </td>
                                <td>
                                    @if (Model.ShowCreateButton == true)
                                    {
                                    <div class="form-group">
                                        <input type="submit" value="Create" class="btn btn-success btn-lg" asp-page-handler="Create" />
                                    </div>
                                    }
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </h4>
            </div>
        </div>
    </div>

