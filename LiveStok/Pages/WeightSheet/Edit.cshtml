@page
@model LiveStok.Pages.WeightSheetPage.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>WeightSheet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="WeightSheet.ID" />
            <div class="form-group">
                <label asp-for="WeightSheet.StockPurchaseID" class="control-label"></label>
                <select asp-for="WeightSheet.StockPurchaseID" class="form-control" asp-items="ViewBag.StockPurchaseID"></select>
                <span asp-validation-for="WeightSheet.StockPurchaseID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WeightSheet.LotNumber" class="control-label"></label>
                <input asp-for="WeightSheet.LotNumber" class="form-control" />
                <span asp-validation-for="WeightSheet.LotNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WeightSheet.Date" class="control-label"></label>
                <input asp-for="WeightSheet.Date" class="form-control" />
                <span asp-validation-for="WeightSheet.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WeightSheet.Origin" class="control-label"></label>
                <input asp-for="WeightSheet.Origin" class="form-control" />
                <span asp-validation-for="WeightSheet.Origin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WeightSheet.Category" class="control-label"></label>
                <input asp-for="WeightSheet.Category" class="form-control" />
                <span asp-validation-for="WeightSheet.Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
